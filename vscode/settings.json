{
  "terminal.integrated.enableMultiLinePasteWarning": false,
  "window.zoomLevel": 1,
  "git.enableSmartCommit": true,
  "vim.easymotion": true,
  "vim.incsearch": true,
  "vim.useSystemClipboard": true,
  "vim.useCtrlKeys": true,
  "vim.hlsearch": true,
  "workbench.sideBar.location": "right",
  "editor.lineNumbers": "relative",
  "editor.minimap.enabled": false,
  "vim.insertModeKeyBindings": [
    {
      "before": ["j", "j"],
      "after": ["<Esc>"]
    }
  ],
  "terminal.external.windowsExec": "C:\\Users\\Jazic\\AppData\\Local\\Microsoft\\WindowsApps\\wt.exe",
  "terminal.integrated.defaultProfile.windows": "Windows Terminal",
  "diffEditor.hideUnchangedRegions.enabled": true,
  "files.associations": {
    "*.ps1": "powershell"
  },
  "workbench.editorAssociations": {
    "*.copilotmd": "vscode.markdown.preview.editor",
    "*.zip": "default"
  },
  "chat.commandCenter.enabled": false,
  "[handlebars]": {
    "editor.defaultFormatter": "mfeckies.handlebars-formatter"
  },
  "workbench.colorTheme": "Default Dark+",
  "vim.leader": " ",
  "vim.leaderModes": ["normal", "visual"],

  "vim.normalModeKeyBindingsNonRecursive": [
    // Leader/Space-Mappings
    { "before": ["<leader>", "\\"], "commands": ["workbench.action.splitEditorRight"] },
    { "before": ["<leader>", "-"], "commands": ["workbench.action.splitEditorDown"] },
    { "before": ["<leader>", "w", "w"], "commands": ["workbench.action.unsplitEditor"] },
    { "before": ["<leader>", "w", "h"], "commands": ["workbench.action.moveEditorLeftInGroup"] },
    { "before": ["<leader>", "w", "l"], "commands": ["workbench.action.moveEditorRightInGroup"] },
    { "before": ["<leader>", "w", "m"], "commands": ["workbench.action.toggleZenMode"] },
    { "before": ["<leader>", "e", "m"], "commands": ["workbench.action.moveEditorToNextGroup"] },
    { "before": ["<leader>", "b", "d"], "commands": ["workbench.action.closeActiveEditor"] },
    { "before": ["<leader>", "b", "o"], "commands": ["workbench.action.closeOtherEditors"] },
    { "before": ["<leader>", ","], "commands": ["workbench.action.showAllEditors"] },
    { "before": ["<leader>", "/"], "commands": ["workbench.action.findInFiles"] },
    { "before": ["<leader>", "<leader>"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["<leader>", "f", "f"], "commands": ["workbench.action.quickOpen"] },
    { "before": ["<leader>", "f", "r"], "commands": ["workbench.action.showAllEditors"] },
    { "before": ["<leader>", "f", "t"], "commands": ["workbench.action.terminal.new"] },
    { "before": ["<leader>", "g", "m"], "commands": ["workbench.action.gotoSymbol"] },
    { "before": ["<leader>", "g", "d"], "commands": ["editor.action.revealDefinition"] },
    { "before": ["<leader>", "g", "r"], "commands": ["editor.action.goToReferences"] },
    { "before": ["<leader>", "c", "f"], "commands": ["editor.action.formatDocument"] },
    { "before": ["<leader>", "o", "i"], "commands": ["editor.action.organizeImports"] },
    { "before": ["<leader>", "s", "a"], "commands": ["editor.action.codeAction"] },
    { "before": ["<leader>", "r", "r"], "commands": ["editor.action.rename"] },
    { "before": ["<leader>", "r", "m"], "commands": ["editor.action.codeAction"], "args": { "kind": "refactor.extract.method" } },
    { "before": ["<leader>", "r", "v"], "commands": ["editor.action.codeAction"], "args": { "kind": "refactor.extract.variable" } },
    { "before": ["<leader>", "z", "o"], "commands": ["editor.unfoldAll"] },
    { "before": ["<leader>", "z", "c"], "commands": ["editor.foldAll"] },
    { "before": ["<leader>", "c", "c"], "commands": ["editor.action.commentLine"] },
    { "before": ["<leader>", "e"], "commands": ["workbench.action.toggleSidebarVisibility"] },
    { "before": ["<leader>", "p", "v"], "commands": ["workbench.action.files.revealInExplorer"] },
    { "before": ["<leader>", "t", "n"], "commands": ["workbench.action.terminal.newWithCwd"], "args": { "cwd": "${fileDirname}" } },
    { "before": ["<leader>", "t", "t"], "commands": ["workbench.action.terminal.focus"] },
    { "before": ["<leader>", "g", "g"], "commands": ["workbench.action.terminal.sendSequence"], "args": { "text": "wt -d ${fileDirname} lazygit\r" } },
    { "before": ["<leader>", "s", "c"], "commands": ["workbench.action.showCommands"] },

    // LazyVim "goto" Mappings
    { "before": ["g", "d"], "commands": ["editor.action.revealDefinition"] },
    { "before": ["g", "D"], "commands": ["editor.action.goToDeclaration"] },
    { "before": ["g", "r"], "commands": ["editor.action.goToReferences"] },
    { "before": ["g", "i"], "commands": ["editor.action.goToImplementation"] },
    { "before": ["g", "y"], "commands": ["editor.action.goToTypeDefinition"] },
    { "before": ["g", "I"], "commands": ["editor.action.goToSourceDefinition"] },
    { "before": ["g", "x"], "commands": ["editor.action.openLink"] },
    { "before": ["g", "k"], "commands": ["cursorUp"] },
    { "before": ["g", "j"], "commands": ["cursorDown"] },
    { "before": ["g", ";"], "commands": ["workbench.action.navigateBack"] },

    // Diagnostics & Problems
    { "before": ["]", "d"], "commands": ["editor.action.marker.next"] },
    { "before": ["[", "d"], "commands": ["editor.action.marker.prev"] },
    { "before": ["]", "e"], "commands": ["editor.action.marker.nextInFiles"] },
    { "before": ["[", "e"], "commands": ["editor.action.marker.prevInFiles"] },
    { "before": ["]", "q"], "commands": ["workbench.action.problems.focus"] },
    { "before": ["[", "q"], "commands": ["workbench.action.problems.focus"] },

    // Navigation wie LazyVim (Ctrl+o/i)
    { "before": ["<C-o>"], "commands": ["workbench.action.navigateBack"] },
    { "before": ["<C-i>"], "commands": ["workbench.action.navigateForward"] }
  ],

  "vim.visualModeKeyBindingsNonRecursive": [
    { "before": ["<leader>", "g", "m"], "commands": ["workbench.action.gotoSymbol"] },
    { "before": ["<leader>", "c", "c"], "commands": ["editor.action.commentLine"] }
  ]
}
